
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AppPeliculas.Models.ViewModels.CategoriaAutorVM


<h1>Eliminar Asignacion</h1>



<form class="form-control" asp-action="Eliminar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @if (Model.categoriaautor.IdCategoriaAutor != 0)
                {
                    <input asp-for="categoriaautor.IdCategoriaAutor" class="form-control" hidden />
                }

            </div>


            <div class="form-group mt-3">
                <label asp-for="categoriaautor.IdAutor" class="control-label"></label>
                <select asp-for="categoriaautor.IdAutor" asp-items="@Model.AutorLista" class="form-select" disabled>
                </select>
                <span asp-validation-for="categoriaautor.IdAutor" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="categoriaautor.IdCategoria" class="control-label"></label>
                <select asp-for="categoriaautor.IdCategoria" asp-items="@Model.CategoriaLista" class="form-select" disabled>
                </select>
                <span asp-validation-for="categoriaautor.IdCategoria" class="text-danger"></span>
            </div>

            <div>
                @try
                {
                    <div class="d-flex justify-content-center">

                        <p class="m-2 text-black">@TempData["error102"]</p>

                    </div>


                }
                catch
                {

                }
            </div>


        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="d-flex justify-content-start mt-3">
                <a asp-action="Index" class="btn btn-success w-50 m-2">Regresar</a>

            
                <button type="submit" class="btn btn-danger  w-50  m-2 ">Eliminar</button>
               

            </div>
        </div>

    </div>



</form>
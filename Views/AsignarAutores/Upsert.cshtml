
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

@model AppPeliculas.Models.ViewModels.PeliculaAutorVM

@if (Model.peliculaautor.IdPeliculaAutor == 0)
{
    <h1>Agregar Autor </h1>
}
else
{
    <h1>Modificar Autor </h1>
}

<form class="form-control" asp-action="Upsert" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @if (Model.peliculaautor.IdPeliculaAutor != 0)
                {
                    <input asp-for="peliculaautor.IdPeliculaAutor" class="form-control" hidden />
                    <input asp-for="peliculaautor.IdPelicula" class="form-control" hidden />
                }

                

            </div>


            <div class="form-group mt-3">
              
                <input asp-for="peliculaautor.IdPelicula" class="form-control" hidden />

                <label asp-for="peliculaautor.IdCategoriaAutor" class="control-label"></label>
                <select asp-for="peliculaautor.IdCategoriaAutor" asp-items="@Model.ListaAutores" class="form-select">
                </select>
                <span asp-validation-for="peliculaautor.IdCategoriaAutor" class="text-danger"></span>
            </div>


            <div>
                @try
                {
                    <div class="d-flex justify-content-center">

                        <p class="m-2 text-black">@TempData["error102"]</p>

                    </div>


                }
                catch
                {

                }
            </div>


        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="d-flex justify-content-start mt-3">
                <a asp-action="Regresar"  asp-route-idpelicula="@Model.peliculaautor.IdPelicula" class="btn btn-success w-50 m-2">Regresar</a>

                @if (Model.peliculaautor.IdPeliculaAutor == 0)
                {
                    <button type="submit" class="btn btn-primary  w-50  m-2 ">Asignar</button>
                }
                else
                {
                    <button type="submit" class="btn btn-danger  w-50  m-2 ">Editar</button>
                }

            </div>
        </div>

    </div>



</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");




    }


}


@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AppPeliculas.Models.ViewModels.PeliculaAutorVM
<h1>Eliminar</h1>

<form class="form-control" asp-action="Eliminar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
               
                <input asp-for="peliculaautor.IdPeliculaAutor" class="form-control" hidden />
                <input asp-for="peliculaautor.IdPelicula" class="form-control"  hidden/>
                

            </div>


            <div class="form-group mt-3">
                <label asp-for="autor.IdAutor" class="control-label"></label>
                <select asp-for="autor.IdAutor" asp-items="@Model.ListaAutores" class="form-select" disabled>
                </select>
                <span asp-validation-for="autor.IdAutor" class="text-danger"></span>
            </div>

          

            <div>
                @try
                {
                    <div class="d-flex justify-content-center">

                        <p class="m-2 text-black">@TempData["error102"]</p>

                    </div>


                }
                catch
                {

                }
            </div>


        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="d-flex justify-content-start mt-3">
                <a asp-action="Index" class="btn btn-success w-50 m-2">Regresar</a>


                <button type="submit" class="btn btn-danger  w-50  m-2 ">Eliminar</button>


            </div>
        </div>

    </div>



</form>